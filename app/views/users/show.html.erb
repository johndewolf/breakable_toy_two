<h1><%= @user.first_name %>'s goals</h1>
<% if @user.goals.empty? && @user != current_user %>
  <h2>User has no goals</h2>
<% elsif @user.goals.empty? && @user == current_user %>
  <h2>You have no goals! Create one: </h2>
  <%= link_to "Create a Goal", new_goal_path, :method => "get" %>
<% else %>
  <div class="row">
    <div class="small-12 columns">
      <h2>Active Goals</h2>
      <table>
        <tr>
          <thead>
            <th>Exercise</th>
            <th>Starting Max</th>
            <th>Target Max</th>
            <th>Goal Date</th>
          </thead>
        </tr>
          <% Goal.active.each do |goal| %>
            <tr>
              <td><%= link_to "#{goal.exercise.name}", goal_path(goal) %></td>
              <td><%= goal.starting_max %></td>
              <td><%= goal.target_max%></td>
              <td><%= goal.end_date.strftime("%B %d, %Y") %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="small-12 columns">
        <% if @user == current_user %>
          <%= link_to "Create Another Goal", new_goal_path, :method => "get" %>
        <% end %>
      </div>
    </div>
    <% if Goal.past.any? %>
      <div class="row">
        <div class="small-12 columns">
          <h2>Past Goals</h2>
          <table class="responsive">
            <tr>
              <thead>
                <th>Exercise</th>
                <th>Starting Max</th>
                <th>Target Max</th>
                <th>Completed?</th>
              </thead>
            </tr>
              <% Goal.past.each do |goal| %>
                <tr>
                  <td><%= link_to "#{goal.exercise.name}", goal_path(goal) %></td>
                  <td><%= goal.starting_max %></td>
                  <td><%= goal.target_max%></td>
                  <% if goal.completed_on != nil %>
                    <td>yes</td>
                  <% else %>
                    <td>no</td>
                  <% end %>
                </tr>
              <% end %>
              <% end %>
            </table>
      </div>
    <% end %>
</div>


