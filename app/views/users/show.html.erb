<h1><%= @user.first_name %>'s goals</h1>
<% if @user.goals.empty? && @user != current_user %>
  <h2>User has no goals</h2>
<% elsif @user.goals.empty? && @user == current_user %>
  <h2>You have no goals! Create one: </h2>
  <%= button_to "Create a Goal", new_goal_path, :method => "get" %>
<% else %>

  <table>
    <th>Exercise</th>
    <th>Starting Max</th>
    <th>Target Max</th>
    <th>Goal Date</th>
      <% @user.goals.each do |goal| %>
        <tr>
          <td><%= goal.exercise.name %></td>
          <td><%= goal.starting_max %></td>
          <td><%= goal.target_max%></td>
          <td><%= goal.end_date.strftime("%B %d, %Y") %></td>
          <td><%= link_to 'Go to goal', goal_path(goal) %></td>
        </tr>
      <% end %>
  </table>
<% end %>
<% if @user == current_user %>
  <%= button_to "Create Another Goal", new_goal_path, :method => "get" %>
<% end %>



