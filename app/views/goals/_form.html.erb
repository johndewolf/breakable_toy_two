<%= simple_form_for @goal do |f| %>
  <%= f.error_notification %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :starting_point, title: "How many can you do now?", data: { tooltip: true } %>
  <%= f.input :target %>
  <%= f.input :unit_of_measurement %>
  <%= f.input :end_date, label: 'Goal date', as: :date  %>
  <%= f.button :submit %>
<% end %>
