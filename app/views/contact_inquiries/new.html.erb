<h2>Contact Us</h2>

<%= simple_form_for @inquiry do |f| %>
  <% if @inquiry.errors.any? %>
    <ul class="errors">
      <% @inquiry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :subject %>
  <%= f.input :content, as: :text %>
  <%= f.button :submit, 'Submit Email' %>
<% end %>

